/**
 * Implements hook_block_info().
 *  
 */
function teacherlistgridview_block_info() {
  $blocks['teach_list_and_grid'] = array(
    'info' => t('Teacher Listing Grid And List'),
  );
  return $blocks;
}

/**
 * Implements hook_block_view().
 *  
 */

function teacherlistgridview_block_view($delta = '') {
  // The $delta parameter tells us which block is being requested.
  switch ($delta) {
    case 'teach_list_and_grid':     
        if(function_exists('teach_ajax_link_page')) {            
            $GridListLink = teach_ajax_link_page();    
            $block['subject'] = t('List and gird view icon');    
            $block['content'] = '';   
            $block['content'] = $GridListLink;    
        } else {
            $block['content'] = '';    
        }
       break;    
   }
  return $block;
}
