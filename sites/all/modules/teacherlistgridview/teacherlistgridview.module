/**
 * Implements hook_init().
 *  
 */  
function teacherlistgridview_init() {
    if(arg(0)=='teacher-changeview-style') {
        //variable_set('class-gird-list', '');               
    } else {
        if(arg(0)=='teacher') {                       
            if(!(isset($_SESSION['teacher-view-change-flg']) && $_SESSION['teacher-view-change-flg']=='Yes')) {
                $_SESSION['teacher-listView']='hidden';
                $_SESSION['teacher-active-list-view']=' ';
