/**
 * Ajax callback to display Toggle List And Grid View School listing View.
 */

function teach_ajax_link_callback($ajax,$type) {           
   
   $_SESSION['teacher-class-gird-list']=$type;
   $_SESSION['teacher-view-change-flg'] = 'Yes';
   
   if ($type=='list') {             
       $_SESSION['teacher-girdView']='hidden';
       $_SESSION['teacher-listView']='display';       
       $_SESSION['teacher-active-grid-view']='';
       $_SESSION['teacher-active-list-view']='active';              
   }
   if ($type=='grid') {             
        $_SESSION['teacher-girdView']='display';
        $_SESSION['teacher-listView']='hidden';       
        $_SESSION['teacher-active-grid-view']='active';
        $_SESSION['teacher-active-list-view']='';              
   }     
   
  drupal_add_js(array('FilterOpenStatus'=> 'NO'), 'setting');
   
  $time='';
  if ($ajax == 'ajax') {
    $commands = array();
    // Ajax command to replace the #ajax-display element with the current time.
    $commands[] = ajax_command_replace('#ajax-display', "<div id='ajax-display'>" . $time . "</div>");            
    // Add a visual "changed" marker to the '#ajax-display' element.
    $commands[] = ajax_command_changed('#ajax-display');        
    //$commands[] = ajax_command_invoke('.products', 'addClass', array('list'));
    $commands[] = ajax_command_invoke('.view-id-teacher', 'trigger', array('RefreshView'));
    $commands[] = ajax_command_invoke('#views-exposed-form-teacher-page', 'clearForm');   
    
    
    $commands[] = ajax_command_replace('#ajax-link-grid', "<div id='ajax-link-grid'>" . $time . "</div>");    
    ajax_deliver(array('#type' => 'ajax', '#commands' => $commands));
  }
  else {
    // No ajax, just replace the html.
    return array(
      '#markup' => $time,
    );
  }
}


